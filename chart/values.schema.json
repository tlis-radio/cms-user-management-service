{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "properties": {
    "environment": {
      "type": "string"
    },
    "spec": {
      "properties": {
        "replicas": {
          "type": "integer"
        },
        "imagePullSecrets": {
          "type": "string"
        }
      }
    },
    "config": {
      "properties": {
        "otel": {
          "type": "object",
          "properties": {
            "exporterOtlpEndpoint": {
              "type": "string"
            }
          }
        },
        "connectionStrings": {
          "type": "object",
          "properties": {
            "postgres": {
              "type": "string"
            }
          }
        },
        "jwt": {
          "type": "object",
          "properties": {
            "audience": {
              "type": "string"
            },
            "authority": {
              "type": "string"
            },
            "issuer": {
              "type": "string"
            }
          }
        },
        "cmsServices": {
          "type": "object",
          "properties": {
            "imageAssetManagement": {
              "type": "object",
              "properties": {
                "baseAddress": {
                  "type": "string"
                }
              }
            }
          }
        },
        "auth0": {
          "type": "object",
          "properties": {
            "domain": {
              "type": "string"
            },
            "clientId": {
              "type": "string"
            },
            "clientSecret": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}